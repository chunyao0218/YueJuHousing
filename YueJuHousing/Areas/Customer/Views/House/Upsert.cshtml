                                <input asp-for="House.PhoneNumber" class="form-control" placeholder="沒有可不填" />
                                <span asp-validation-for="House.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <label asp-for="House.Email" class="p-0"></label>
                        </div>
                        <div class="col-md-12 col-sm-12" style="display: flex; flex-wrap: nowrap; overflow-x: auto; align-items: center;">
                            <div class="col-md-6 col-sm-6" style="display: flex; flex-wrap: nowrap; overflow-x: auto; align-items: center;">
                                <input asp-for="House.Email" class="form-control" placeholder="請輸入信箱" />
                                <span asp-validation-for="House.Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <label asp-for="House.LineID" class="p-0"></label>
                        </div>
                        <div class="col-md-12 col-sm-12" style="display: flex; flex-wrap: nowrap; overflow-x: auto; align-items: center;">
                            <div class="col-md-6 col-sm-6" style="display: flex; flex-wrap: nowrap; overflow-x: auto; align-items: center;">
                                <input asp-for="House.LineID" class="form-control" placeholder="請輸入LineID" />
                                <span asp-validation-for="House.LineID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-12 col-sm-12">
                            <label asp-for="House.ProtectPhone" class="p-0"></label>
                        </div>
                        <div class="col-md-12 col-sm-12" style="display: flex; flex-wrap: nowrap; overflow-x: auto; align-items: center;">
                            <div class="col-md-6 col-sm-6" style="display: flex; flex-wrap: nowrap; overflow-x: auto; align-items: center;">
                                <select asp-for="House.ProtectPhone" id="city" class="form-control" required>
                                    <option value="" disabled selected style="color: #b7b7b7;">建議啟用，不會影響買家撥打</option>
                                    <option value="啟用">啟用</option>
                                    <option value="不啟用">不啟用</option>
                                </select>
                                <span asp-validation-for="House.ProtectPhone" class="text-danger"></span>
                            </div>
                        </div>
                        
                    </div>


                        <div class="row">
                            <div class="col-6 col-md-3">
                                @if (Model.House.Id != 0)
                                {
                                <button type="submit" class="btn btn-primary form-control" style="background: #456270;">儲存</button>
                                }
                                else
                                {
                                <button type="submit" class="btn btn-primary form-control" style="background: #456270;">刊登</button>
                                }
                            </div>
                            <div class="col-6 col-md-3">
                            <a asp-controller="House" asp-action="Index" class="btn btn-secondary border form-control" style="background: #456270; color:white;">
                                    返回
                                </a>
                            </div>
                        </div>
                    </div>
            
                <div class="col-2">
                    <img class="mt-4" src="@Model.House.ImageUrl" width="20%" style="border-radius:5px; border:1px solid #bbb9b9" />
                </div>
        
        </form>
      </div>
    </div>
</section>

