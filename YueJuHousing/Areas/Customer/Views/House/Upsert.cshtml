                                <input asp-for="House.ContactPeopleName" class="form-control" placeholder="請輸入姓名" />
                            <label asp-for="House.NoIntermediaryDisturb" style="display:contents;margin-left:10px;"><input type="checkbox" name="gender" value="true" style="margin-left:10px;">屋主聲明，請仲介勿擾！</label>
